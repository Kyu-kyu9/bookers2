<p id="notice"></p>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @user do |f| %>
  <div class="form-group">
    <div>
  <label for="inputName">Name</label>
  </div>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>
  
  <div class="form-group">
    <div>
  <label for="inputImage">ProfileImage</label>
  </div>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  </div>
   <div class="form-group">
      <div>
   <label for="input紹介">introduction</label>
    </div>
  <%= f.text_field :introduction, autofocus: true, id:"input紹介", placeholder:"introduction"%>
   </div>
  
  <%= f.submit "Update User",class:"btn btn-secondary" %>
  
<% end %>
</div>
</div>
</div>